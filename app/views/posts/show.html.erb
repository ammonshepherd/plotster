<div class="row">
  <div class="col-md-12">
    <h1><%= @post.title %></h1>
    <h2>Caption:</h2>
    <p>
      <%= @post.caption %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3>Picture</h3>
    <p>
      <%= image_tag(@post.picture_url, class: "img-responsive") if @post.picture.present? %>
    </p>
  </div>

  <div class="col-md-6">
    <h3>Location</h3>
    <%= simple_format @post.location %>
  </div>
</div>

<div class="row">
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %>
  <%= link_to 'Back', posts_path, class: "btn btn-success" %>
</div>
